import logging

logging.basicConfig(
    filename="market.log",
    level=logging.INFO,
    format="%(asctime)s - %(message)s"
)

def log_print(msg):
    print(msg)
    logging.info(msg)

class Products:
    def __init__(self, items):
        self.items = items
        log_print("You have those items:")
        for i in self.items:
            log_print(i)
        log_print("")

class Customers:
    def __init__(self, people):
        self.people = people
        log_print("Those are the customers:")
        for p in self.people:
            log_print(p)
        log_print("")

class Discounts(Products):
    def __init__(self, items, discount):
        super().__init__(items)
        self.discount = discount
        log_print("Those are the discounts:")
        for d in self.discount:
            log_print(d)
        log_print("")

class Orders(Customers):
    def __init__(self, people, orders):
        super().__init__(people)
        self.orders = orders
        log_print("Those are the orders:")
        for o in self.orders:
            log_print(o)
        log_print("")

class Sell(Discounts, Orders):
    def __init__(self, items, people, discount, orders):
        Discounts.__init__(self, items, discount)
        Orders.__init__(self, people, orders)

        log_print("MarketManager ready! Hereâ€™s the data you entered:")
        log_print(f"Items: {self.items}")
        log_print(f"Customers: {self.people}")
        log_print(f"Discounts: {self.discount}")
        log_print(f"Orders: {self.orders}")


log_print("Hi! Welcome to our market simulator.\n")
log_print("To start the game, you must input the following things in these formats:\n")

log_print("1) Items: Example -> pen banana\n")
log_print("2) Customers: Example -> Emil Ughur\n")
log_print("3) Discounts: Example -> pen banana\n")
log_print("4) Orders: Example -> Emil,pen Ughur,BANANA\n")

items_input = input("Enter items: ").split()
people_input = input("Enter customers: ").split()
discount_input = input("Enter discounts: ").split()
orders_input = input("Enter orders: ").split()

market = Sell(items_input, people_input, discount_input, orders_input)
